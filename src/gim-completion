#-------------------------------------------------------------------------------
# SOFTWARE DEPENDENCIES
#-------------------------------------------------------------------------------

# list of required software
SW_REQUIRED='command [ compgen complete'

# check if some software is missing
for i in $SW_REQUIRED; do
    # software is missing if at least one piece of software is missing
    if ! command -v "$i" > /dev/null; then
        echo "$0: Required software $i is missing.
POSSIBLE SOLUTIONS:
  * Install $i using an installed package manager." >&2
        exit 1
    fi
done

#-------------------------------------------------------------------------------
# APPLY TAB COMPLETION
#-------------------------------------------------------------------------------

# DESCRIPTION:
#   Prepare a hint consisting of words that can be used from the current part of
#   word.
_gim() {
    # a hint will be shown only when a part of first argument is written
    if [ "$COMP_CWORD" -eq 1 ]; then
        # generate hint from available gim's action
        COMPREPLY=($(compgen -W "install uninstall status -autoclean -clean -help -about -version" -- "${COMP_WORDS[COMP_CWORD]}"))
    fi
}

# assign a function to be called when TAB complete is required when gim is used
complete -F _gim gim
